!!! 5
%html
  %head
    %title jalkaennustus
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tags

  %body.bg-light
    .container
      .bg-primary.text-white.p-3.mb-3
        %h1.title Jalkaennustus #{@tournament_name}
      #main
        - if flash[:notice]
          .alert.alert-success= flash[:notice]
        - elsif flash[:warning]
          .alert.alert-danger= flash[:warning]

        = yield